<table>
 <% book.book_comments.each do |book_comment| %>
<tbody>
  <tr>
  <td><%= attachment_image_tag(book.user, :profile_image_id, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
  <td><%= book_comment.user.name %></td>
  <td><%= book_comment.comment %></td>
<% if book_comment.user == current_user %>
  <td><%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete %></td>
<% end %>
<% end %>
</tr>
</tbody>
</table>
<td><%= form_with(model:[book, @book_comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'10', cols:'70',  placeholder: "コメントをここに" %>
  <p><%= f.submit "送信する" %></p>
<% end %></td>